<? /* NOTE: assuming test warning will ONLY be enabled in non-production environments;
   jquery should always be already loaded for set-role functionality. */ ?>
<script type="text/javascript">
  var $j = jQuery.noConflict();  
  $j(document).ready(function() {
    var div = $j('#beta_warning');
    var start = $j(div).offset().top;
    $j(window).scroll(function() {
      var p = $j(window).scrollTop();
      $j(div).css('position', ((p)>start) ? 'fixed' : 'static');
      $j(div).css('top', ((p)>start) ? '0px' : '');
    }); 
  });
</script>
<div id="beta_warning">
  <div id="beta_message">
    This is the ETD staging site. Content may be changed or deleted without warning.
  </div>
</div>
